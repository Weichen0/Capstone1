<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Form_Questionnaire">

    <LinearLayout
        android:id="@+id/vview_questionnaire"
        android:layout_width="406dp"
        android:layout_height="728dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/sview"
            android:layout_width="match_parent"
            android:layout_height="678dp">

            <LinearLayout
                android:id="@+id/sview_vview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="234dp"
                    app:srcCompat="@drawable/questionnaire" />

                <TextView
                    android:id="@+id/txt_questionnaire_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10px"
                    android:text=" "
                    android:textColor="#303030" />

                <TextView
                    android:id="@+id/txt_questionnaire1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Section 1: User Details"
                    android:textColor="#009688"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Full Name (as NRIC)" />

                <EditText
                    android:id="@+id/in_fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="John Wick"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/txt_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Birthday" />

                <EditText
                    android:id="@+id/in_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="(YYYYMMDD) )e.g. 20000524"
                    android:inputType="date" />

                <TextView
                    android:id="@+id/txt_race"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Race" />

                <EditText
                    android:id="@+id/in_race"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="e.g. Malay"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/txt_nationality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nationality" />

                <EditText
                    android:id="@+id/in_nationality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="e.g. Malaysian"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/txt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Number" />

                <EditText
                    android:id="@+id/in_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="e.g. 012 3456789"
                    android:inputType="phone" />

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email" />

                <EditText
                    android:id="@+id/in_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="e.g. johnwick@gmail.com"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/txt_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address" />

                <EditText
                    android:id="@+id/in_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g. Subang Jaya, Selangor"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/txt_questionnaire2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Section 2: User Opinion"
                    android:textColor="#009688"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_primary2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Primary Infection Factor" />

                <RadioGroup
                    android:id="@+id/rgroup_primary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/rbtn1_primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Indirect (objects with droplets)"
                        android:textColor="#303030" />

                    <RadioButton
                        android:id="@+id/rbtn2_primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact (physical contact)"
                        android:textColor="#303030" />

                    <RadioButton
                        android:id="@+id/rbtn3_primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aerosol (airborne particles)"
                        android:textColor="#303030" />
                </RadioGroup>

                <TextView
                    android:id="@+id/txt_secondary2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Secondary Infection Factor" />

                <RadioGroup
                    android:id="@+id/rgroup_secondary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/rbtn1_secondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Clustering (expose to a group)"
                        android:textColor="#303030" />

                    <RadioButton
                        android:id="@+id/rbtn2_secondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Environmental (weather, temeperature, location)"
                        android:textColor="#303030" />

                    <RadioButton
                        android:id="@+id/rbtn3_secondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Touching Face (mouth, eyes, ear, nose)"
                        android:textColor="#303030" />

                    <RadioButton
                        android:id="@+id/rbtn4_secondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hygiene Problems (not wearing mask, no wash hands)"
                        android:textColor="#303030" />
                </RadioGroup>

                <TextView
                    android:id="@+id/txt_exposure2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Exposure" />

                <RadioGroup
                    android:id="@+id/rgroup_exposure"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/rbtn1_exposure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Local Travel (across states, cities)"
                        android:textColor="#303030" />

                    <RadioButton
                        android:id="@+id/rbtn2_exposure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="International Travel (overseas)"
                        android:textColor="#303030" />

                    <RadioButton
                        android:id="@+id/rbtn3_exposure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Visiting Friends (gathering, meeting)"
                        android:textColor="#303030" />

                    <RadioButton
                        android:id="@+id/rbtn4_exposure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Religion Activities (weekly prayers, church)"
                        android:textColor="#303030" />

                    <RadioButton
                        android:id="@+id/rbtn5_exposure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Indoor Sports (gym, courts)"
                        android:textColor="#303030" />

                    <RadioButton
                        android:id="@+id/rbtn6_exposure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Restaurants/ Hospitalities "
                        android:textColor="#303030" />

                    <RadioButton
                        android:id="@+id/rbtn7_exposure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Work/ School"
                        android:textColor="#303030" />
                </RadioGroup>

                <TextView
                    android:id="@+id/txt_suggestion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Suggest Other Factors" />

                <EditText
                    android:id="@+id/in_suggestion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint='if not "-"'
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/txt_most"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Most Contributed Factor" />

                <EditText
                    android:id="@+id/in_most"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/txt_questionnaire3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Section 3: Feedback"
                    android:textColor="#009688"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_fsuggestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Suggestion for MCO" />

                <EditText
                    android:id="@+id/in_fsuggestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="(optional)"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/txt_feedbacks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional Feedbacks" />

                <EditText
                    android:id="@+id/in_feedbacks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="(optional)"
                    android:inputType="textPersonName" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_qsubmit"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:background="#009688"
            android:text="Submit"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>