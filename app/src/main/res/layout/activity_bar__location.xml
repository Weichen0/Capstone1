<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bar_Location"
    android:background="@drawable/bg_grey"
    android:scaleType="fitXY">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:text="Bar Chart Location"
                android:textColor="#006158"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt_barl_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:textColor="#425956" />

            <Spinner
                android:id="@+id/spinner_location_f"
                android:layout_width="260dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@android:drawable/btn_dropdown"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <EditText
                android:id="@+id/in_location1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20px"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="Location 1"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/in_location2"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20px"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="Location 2"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btn_generate"
                android:layout_width="248dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20px"
                android:background="#009688"
                android:text="Generate"
                android:textColor="#FFFFFF" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barchart_f"
                android:layout_width="366dp"
                android:layout_height="387dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp">

            </com.github.mikephil.charting.charts.BarChart>

            <TextView
                android:id="@+id/txt_barl_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Summary"
                android:textColor="#009688"
                android:textSize="18sp" />

            <ScrollView
                android:layout_width="351dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="100px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txt_barl_f"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:background="#009688"
                            android:text="Factors"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/txt_barl_l1"
                            android:layout_width="131dp"
                            android:layout_height="wrap_content"
                            android:background="#009688"
                            android:text="Location 1"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/txt_barl_l2"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:background="#009688"
                            android:text="Location 2"
                            android:textColor="#FFFFFF" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txt_barl_a"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="All"
                            android:textColor="#009688" />

                        <TextView
                            android:id="@+id/txt_a_l1"
                            android:layout_width="131dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/txt_a_l2"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#FFFFFF" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txt_barl_p"
                            android:layout_width="89dp"
                            android:layout_height="wrap_content"
                            android:text="Primary"
                            android:textColor="#009688" />

                        <TextView
                            android:id="@+id/txt_p_l1"
                            android:layout_width="133dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/txt_p_l2"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#FFFFFF" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txt_barl_s"
                            android:layout_width="89dp"
                            android:layout_height="wrap_content"
                            android:text="Secondary"
                            android:textColor="#009688" />

                        <TextView
                            android:id="@+id/txt_s_l1"
                            android:layout_width="133dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/txt_s_l2"
                            android:layout_width="128dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#FFFFFF" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txt_barl_e"
                            android:layout_width="88dp"
                            android:layout_height="wrap_content"
                            android:text="Exposure"
                            android:textColor="#009688" />

                        <TextView
                            android:id="@+id/txt_e_l1"
                            android:layout_width="133dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/txt_e_l2"
                            android:layout_width="129dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#FFFFFF" />
                    </TableRow>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>